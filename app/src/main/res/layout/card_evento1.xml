<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <TextView
                    android:id="@+id/txtSobreAPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital do Coração de messejana"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"/>

            <TextView
                    android:id="@+id/txt_explicandoAPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/eventos1"

                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    app:autoSizeTextType="none"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="381dp" app:srcCompat="@drawable/hospital_do_coracao"
                    android:id="@+id/imageView3" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtSobreAPP"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txt_explicandoAPP"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
